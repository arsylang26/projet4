{% extends "::layout.html.twig" %}
{% block body %}

        <div>
            <h3>résumé de votre commande</h3>
            <hr/>
            {% for ticket in booking.tickets %}
                <p>Une entrée à la {{ booking.dayLong }} à {{ ticket.discount }}</p>
                <p>Prix :<strong>{{ ticket.price }}</strong></p>
                <p>Ticket N°: nombre</p>
                <p>nom: {{ ticket.lastName }} prénom: {{ ticket.firstName }}</p>
                <p>né(e) le :{{ ticket.birthDate|date("d M Y") }}</p>
                <p>Pays: {{ ticket.country }}</p>
                <hr/>
            {% endfor %}

        </div>

{% endblock %}