{% extends "::layout.html.twig" %}
{% block body %}

    <div>
        <h3>résumé de votre commande</h3>
        <hr/>
        {% set daylong="journée",discount="plein tarif" %}
        {% for ticket in booking.tickets %}


            <p>Une entrée à la {{ dayLongLabel }} à {{ ticket.discountLabel }}</p>
            <p>Prix :<strong>{{ ticket.computePrice }}</strong></p>
            <p>Ticket N°: <strong>{{ ticket.ticketCode }}</strong></p>
            <p>nom: {{ ticket.lastName|upper }} prénom: {{ ticket.firstName|title }}</p>
            <p>né(e) le :{{ ticket.birthDate|date("d M Y") }}</p>
            <p>Pays: {{ ticket.country }}</p>
            <a class="btn btn-danger" href="#" role="button">Supprimer</a>
            <a class="btn btn-primary" href="#" role="button">Modifier</a>
            <hr/>
        {% endfor %}
        <input type="submit"/>
    </div>

{% endblock %}