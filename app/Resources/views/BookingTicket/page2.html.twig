{% extends "::layout.html.twig" %}
{% form_theme form _self %}

{% block _booking_page2_tickets_entry_widget %}
    <div class="">
        <table class="table table-bordered table-striped table-condensed">
            <tr>
                <td>{{ form_widget(form) }}</td>
            </tr>
        </table>
    </div>
{% endblock %}
{% block body %}
    <h3>Formulaire de réservation des billets du Musée du louvre</h3>
    <div class="container trolley">
        <ol class="progress-meter">
            <li class="progress-point done">Vos coordonnées</li>
            <li class="progress-point done">les visiteurs</li>
            <li class="progress-point todo">votre commande</li>
            <li class="progress-point todo">finalisation</li>
        </ol>
    </div>
    <div class="well">
        {{ form_start(form) }}
        {% for ticket in form.tickets %}
        {{ form_widget(ticket) }}
        {% endfor%}
        <input class="btn btn-success center-block" type="submit"/>
        {{ form_end(form) }}
    </div>
{% endblock %}
