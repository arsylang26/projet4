{% extends "::layout.html.twig" %}

{% block body %}
    <h3>Formulaire de réservation des billets du Musée du louvre</h3>
    <div class="container trolley">
        <ol class="progress-meter">
            <li class="progress-point done"><a href="{{ path('homepage') }}">Vos coordonnées</a></li>
            <li class="progress-point done">Les visiteurs</li>
            <li class="progress-point todo">Votre commande</li>
            <li class="progress-point todo">Finalisation</li>
        </ol>
    </div>
    <div class="well">
        {{ form_start(form) }}
        {% for ticket in form.tickets %}

            <div class="tickets_table">
                <table class="table table-bordered table-striped table-condensed">
                    <tr>
                        <td class="ticket_title"><span>billet n°{{ loop.index }}</span></td>
                        <td class="ticket_input">{{ form_widget(ticket) }}</td>
                    </tr>
                </table>
            </div>

        {% endfor %}
        <input class="btn btn-success center-block" type="submit"/>
        {{ form_end(form) }}
    </div>
{% endblock %}
